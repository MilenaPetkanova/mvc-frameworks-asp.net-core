@model Eventure.ViewModels.Events.AllEventsViewModel

@{
    ViewData["Title"] = "Index";
}

<main class="mt-3 mb-5">
    <h1 class="text-center">All Events</h1>
    <hr class="hr-2 eventure-bg-color half-width" />
    <table class="table w-75 mx-auto table-hover">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-3">Name</th>
                <th class="col-md-2">Start</th>
                <th class="col-md-2">End</th>
                <th class="col-md-2">Place</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eventEntity in Model.AllEvents)
            {
            <tr class="row">
                <td class="col-md-1">@eventEntity.Id</td>
                <td class="col-md-3">@eventEntity.Name</td>
                <td class="col-md-2">@eventEntity.Start.ToString("MM/dd/yyyy hh:mm tt")</td>
                <td class="col-md-2">@eventEntity.End.ToString("MM/dd/yyyy hh:mm tt")</td>
                <td class="col-md-3">@eventEntity.Place</td>
            </tr>
            }
        </tbody>
    </table>
    <hr class="hr-2 eventure-bg-color half-width" />
</main>


