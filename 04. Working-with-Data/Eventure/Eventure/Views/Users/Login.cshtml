@using Eventure.ViewModels.Users
@model LoginUserModel

@{
    ViewData["Title"] = "Login";
}

<main class="mt-3">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr class="hr-2 eventure-bg-color half-width" />
    <form class="mx-auto half-width text-center" method="post">
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" type="text" class="form-control" placeholder="Username..." `>
            <span asp-validation-for="UserName" class="text-danger field-validation-valid"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password...">
            <span asp-validation-for="Password" class="text-danger field-validation-valid"></span>
        </div>
        <hr class="hr-2 eventure-bg-color" />
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn eventure-bg-color">Login</button>
        </div>
    </form>
</main>


