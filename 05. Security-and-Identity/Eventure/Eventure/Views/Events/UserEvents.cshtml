@model Eventure.ViewModels.Events.UserEventsViewModel

@{
    ViewData["Title"] = "Index";
}

<main class="mt-3 mb-5">
    <h1 class="text-center">My Events</h1>
    <hr class="hr-2 eventure-bg-color half-width" />
    <table class="table w-75 mx-auto table-hover">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-3">Name</th>
                <th class="col-md-2">Start</th>
                <th class="col-md-2">End</th>
                <th class="col-md-2">Tickets</th>
            </tr>
        </thead>
        <tbody>
            @{ var index = 1; }
            @foreach (var eventEntity in Model.Events)
            {
                <tr class="row">
                    <td class="col-md-1">@index</td>
                    <td class="col-md-3">@eventEntity.Name</td>
                    <td class="col-md-2">@eventEntity.StartToStr</td>
                    <td class="col-md-2">@eventEntity.EndToStr</td>
                    <td class="col-md-3">@eventEntity.TotalTickets</td>
                </tr>
                index++;
            }
        </tbody>
    </table>
    <hr class="hr-2 eventure-bg-color half-width" />
</main>
