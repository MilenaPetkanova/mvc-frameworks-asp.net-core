@model Eventure.ViewModels.Events.AllEventsViewModel

@{
    ViewData["Title"] = "Index";
}

<main class="mt-3 mb-5">
    <h1 class="text-center">All Events</h1>
    <hr class="hr-2 eventure-bg-color half-width" />
    <table class="table w-75 mx-auto table-hover">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-2">Name</th>
                <th class="col-md-2">Start</th>
                <th class="col-md-2">End</th>
                <th class="col-md-5">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{ var index = 1; }
            @foreach (var eventEntity in Model.Events)
            {
                <tr class="row">
                    <td class="col-md-1">@index</td>
                    <td class="col-md-2">@eventEntity.Name</td>
                    <td class="col-md-2">@eventEntity.StartToStr</td>
                    <td class="col-md-2">@eventEntity.EndToStr</td>
                    <td class="col-md-5">
                        <form class="form-inline" asp-controller="Orders" asp-action="Create" method="post">
                            <input class="eventId" name="eventId" value="@eventEntity.Id" hidden />
                            <label class="font-weight-bold">Tickets</label>
                            <input type="number" name="ticketsCount" id="ticketsCount" />
                            <button type="submit" class="btn eventure-bg-color">Order</button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
    <hr class="hr-2 eventure-bg-color half-width" />
</main>
