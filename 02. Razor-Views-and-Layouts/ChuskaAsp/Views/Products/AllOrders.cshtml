@model AllOrdersViewModel
@{
    ViewData["Title"] = "AllOrders";
}

<main class="mt-3 mb-5">
    <h1 class="text-center">All Orders</h1>
    <hr class="hr-2 bg-dark" />
    <table class="table w-75 mx-auto table-hover">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-4">Order ID</th>
                <th class="col-md-2">Customer</th>
                <th class="col-md-2">Product</th>
                <th class="col-md-2">Ordered On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr class="row">
                    <th class="col-md-1">1</th>
                    <td class="col-md-4">@order.Id</td>
                    <td class="col-md-2">@order.User</td>
                    <td class="col-md-2">@order.Product</td>
                    <td class="col-md-2">@order.OrderedOn</td>
                </tr>
            }
        </tbody>
    </table>
</main>


