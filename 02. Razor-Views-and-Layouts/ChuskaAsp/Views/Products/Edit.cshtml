@{
    ViewData["Title"] = "Edit";
}

<main class="mt-3 mb-5">
    <h1 class="text-center">Edit Product</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post" asp-controller="Products" asp-action="Edit" >
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" value=@Model.Name name="name">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" class="form-control" id="price" min="0.01" step="0.01" value=@Model.Price name="price">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" rows="4" name="description">@Model.Description</textarea>
        </div>
        <h4 class="text-center">Product Type</h4>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="product-type-holder mt-4 d-flex justify-content-around">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="Type" id="inlineRadio1" value="Food" @(Model.Type == "Food " ? "checked" : "")>
                <label class="form-check-label" for="inlineRadio1">Food</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="Type" id="inlineRadio2" value="Domestic" @(Model.Type == "Domestic" ? "checked" : "")>
                <label class="form-check-label" for="inlineRadio2">Domestic</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="Type" id="inlineRadio3" value="Health" @(Model.Type == "Health" ? "checked" : "")>
                <label class="form-check-label" for="inlineRadio3">Health</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="Type" id="inlineRadio4" value="Cosmetic" @(Model.Type == "Cosmetic" ? "checked" : "")>
                <label class="form-check-label" for="inlineRadio4">Cosmetic</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="Type" id="inlineRadio5" value="Other" @(Model.Type == "Other" ? "checked" : "")>
                <label class="form-check-label" for="inlineRadio5">Other</label>
            </div>
        </div>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="product-action-holder mt-4 half-width mx-auto d-flex justify-content-around">
            <button type="submit" class="btn chushka-bg-color">Edit</button>
            <button class="btn chushka-bg-color">Cancel</button>
        </div>
    </form>
</main>


